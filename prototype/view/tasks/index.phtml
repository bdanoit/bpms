                        <a class="btn btn-default btn-xs align-right<?if(auth::check("edit")):?>" href="<?=router::URL("/*id/tasks/task-incomplete/$task->id");?>"<?else:?> disabled"<?endif;?> title="Re-open"><span class="glyphicon glyphicon-folder-open"></span></a>
